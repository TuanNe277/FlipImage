<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDD8D8"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDD8D8"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#DDD8D8"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton12"
                android:layout_width="50pt"
                android:layout_height="38dp"
                android:layout_marginTop="20px"
                android:layout_weight="1"
                android:background="#DDD8D8"
                app:srcCompat="@drawable/arrow_small_left"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/img_pick_btn"
                android:layout_width="50pt"
                android:layout_height="37dp"
                android:layout_marginTop="20px"
                android:layout_weight="1"
                android:background="#DDD8D8"
                app:srcCompat="@drawable/picture"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/luu"
                android:layout_width="50pt"
                android:layout_height="37dp"
                android:layout_marginTop="20px"
                android:layout_weight="1"
                android:background="#DDD8D8"
                app:srcCompat="@drawable/luu"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#121111"/>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearLayoutTrong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_add_24" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#121111"/>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDD8D8"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/xoay"
                android:layout_width="50pt"
                android:layout_height="82dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                app:srcCompat="@drawable/rotate_right__1_"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton14"
                android:layout_width="50pt"
                android:layout_height="81dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                app:srcCompat="@drawable/exchange_alt2"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/latNgan"
                android:layout_width="50pt"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                app:srcCompat="@drawable/exchange_alt"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>